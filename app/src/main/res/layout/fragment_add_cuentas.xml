<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddCuentasFragment"
    android:background="#9E9E9E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
            android:id="@+id/etTitular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/titular"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etBanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTitular"
            android:ems="10"
            android:hint="@string/banco"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etnumeroCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etBanco"
            android:ems="10"
            android:hint="@string/numeroCuenta"
            android:inputType="number"
            android:maxLength="20" />

            <ProgressBar
                android:id="@+id/progressBarAddCuenta"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/etnumeroCuenta"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/etnumeroCuenta">

            <Spinner
                android:id="@+id/spinnerTipoDocumento"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></Spinner>

            <EditText
                android:id="@+id/etCedulaCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/documentoNumero"
                android:inputType="number" />
        </LinearLayout>

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutDocumento"
            android:ems="10"
            android:hint="@string/telefono"
            android:inputType="number"
            android:maxLength="11" />

        <EditText
            android:id="@+id/etCorreoCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTelefono"
            android:ems="10"
            android:hint="@string/correoCuenta"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/etTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etCorreoCuenta"
            android:ems="10"
            android:text="@string/tipodeCuenta"
            android:textSize="18sp"
            android:paddingTop="24dp"/>

        <RadioGroup
            android:id="@+id/radioTipoCuenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/etTipo"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonAhorro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cuentaAhorro" />

            <RadioButton
                android:id="@+id/radioButtonCorriente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cuentaCorriente" />

        </RadioGroup>

        <Button
            android:id="@+id/guardarCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioTipoCuenta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/buttonGuardar" />


        </RelativeLayout>
    </ScrollView>

</FrameLayout>