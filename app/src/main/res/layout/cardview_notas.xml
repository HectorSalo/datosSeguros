<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="18dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_lists">

                <TextView
                    android:id="@+id/tvTituloNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/tituloNota"
                    android:layout_marginStart="8dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvcontenidoNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/contenidoNota"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginStart="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="22sp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/ib_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="#00FFFFFF"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_24" />
            </LinearLayout>


        <TextView
            android:id="@+id/tvmenuNota"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="&#8942;"
            android:textColor="#fff"
            android:textSize="18sp" />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>