<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsEditar.EditarNotaFragment"
    android:background="@color/colorBackgroundEditar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/etTituloEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/tituloNota"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#fff"/>

        <ProgressBar
            android:id="@+id/progressBarEditarNota"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/etTituloEditar"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etContenidoEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTituloEditar"
            android:paddingTop="24dp"
            android:ems="10"
            android:hint="@string/contenidoNota"
            android:inputType="textMultiLine"
            android:textColor="#fff"
            android:textColorHint="#fff"/>

        <Button
            android:id="@+id/guardarNotaEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etContenidoEditar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="@string/buttonGuardar" />


    </RelativeLayout>
    </ScrollView>

</FrameLayout>