<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">


    <Button
        android:id="@+id/buttonUpdateEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/btUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupUpdate" />

    <RadioGroup
        android:id="@+id/radioGroupUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonUpdateEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updateEmail" />

        <RadioButton
            android:id="@+id/radioButtonUpdatePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updatePass" />

        <RadioButton
            android:id="@+id/radioButtonUpdateAlmacenamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/updateAlmacenamiento" />

        <RadioButton
            android:id="@+id/radioButtonUpdateBloqueo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updateBloqueo" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/layoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupUpdate">

        <EditText
            android:id="@+id/editTextUpdateEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nuevoEmail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextRepetirUpdateEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/repetirEmail"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupUpdate">

        <EditText
            android:id="@+id/editTextUpdatePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/nuevoPass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextRepetirUpdatePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/repetirPass"
            android:inputType="textPassword" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupAlmacenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupUpdate"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonNube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioNube" />

        <RadioButton
            android:id="@+id/radioButtonDispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioDispositivo" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGruopBloqueo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupUpdate">

        <RadioButton
            android:id="@+id/radioButtonHuella"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioHuella" />

        <RadioButton
            android:id="@+id/radioButtonPIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radioPIN" />

        <RadioButton
            android:id="@+id/radioButtonSinBloqueo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radiosinbloqueo" />
    </RadioGroup>

    <ProgressBar
        android:id="@+id/progressBarPerfil"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupUpdate" />
</androidx.constraintlayout.widget.ConstraintLayout>