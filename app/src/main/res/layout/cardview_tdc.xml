<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="18dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/fondo_contrasena">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/titular"
                    android:textSize="18dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tvTitularTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/numeroTarjeta"
                    android:textSize="18dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tvnumeroTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/numeroCVV"
                    android:textSize="18dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tvnumeroCVV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/cedula"
                    android:textSize="18dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tvCedulaTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/tipodeCuenta"
                    android:textSize="18dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tvTipoTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvmenuTarjeta"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="&#8942;"
            android:textSize="18dp"
            android:textColor="#fff"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>