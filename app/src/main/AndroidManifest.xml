<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skysam.datossegurosFirebaseFinal">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".TemasActivity"
            android:label="@string/title_tema"
            android:theme="@style/Theme.Dialog.MiPerfil" />
        <activity android:name=".BloqueoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/titleMiPerfil"
            android:theme="@style/Theme.Dialog.MiPerfil" />
        <activity
            android:name=".AcercaActivity"
            android:theme="@style/Theme.Acerca" />
        <activity android:name=".EditarActivity" />
        <activity android:name=".RegistrarActivity" />
        <activity android:name=".InicSesionActivity" />
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>